generator client {
	provider = "prisma-client-js"
}

datasource db {
	provider = "mongodb"
	url = env("DATABASE_URL")
}

model Game {
	id					String @id @default(auto()) @map("_id") @db.ObjectId
	timeCreated			Int
	timeStarted			Int
	timeFinished		Int
	playerOneName		String
	playerOneScore		Int
	playerOneAvgTime	Float
	playerTwoName		String
	playerTwoScore		Int
	playerTwoAvgTime	Float
}

model Score {
	id			String @id @default(auto()) @map("_id") @db.ObjectId
	name 		String
	avgTime		Float
	timestamp	Int
}

model User {
	id			String @id @map("_id")
	name		String
	timestamp	Int
}
